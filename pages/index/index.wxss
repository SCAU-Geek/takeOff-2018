/**index.wxss**/
page {
  font-family: "PingHei","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif";
  font-size: 16px;
}

.container {
  height: 100%;
  position:relative;
}

.bcg {
  z-index: -1;
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0px; 
  bottom: 0px;
  left: 0px;
  right: 0px;
}

.temp {
  display: block;
  font-size: 50px;
  text-align: center;
  padding: 50px;
}

.detailContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail {
  display: flex;
  flex-direction: row;
  justify-content: cneter;
  padding: 15px;
}

.icon {
  width: 22px;
}

.txt {
  margin-left: 5px;
}

.detailItem {
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.forecast {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 15px;
  text-align: center;
  padding: 12px;
}

.forecastItem {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: auto 15px;
}

.livingIndex {
  display:flex;
  flex-direction: row;
  align-content: center;
}

.livingIndexItem{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: auto;
}

.footer {
  display: block;
  color: rgba(0, 0, 0, 0.623);
  font-size: 12px;
  text-align: center;
  padding: 10px 0px;
  width: 100%;
  position: absolute;
  bottom: 0px;
}

.active {
  font-weight: bold;
}